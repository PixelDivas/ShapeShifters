<!DOCTYPE html >
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShapeShifters</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
    <link rel="stylesheet" href="~/ShapeShifters.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        @if(Context.Session.GetInt32("uid") != null) {

        
        <div class="entete1">
             <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg; border-bottom box-shadow mb-3">
                <div class="container-fluid">
                   <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShapeShifters</a>
                      <div class="entete2">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a href="/about" class="nav-link text-dark">About</a>
                             <a href="/posts/all"class="nav-link text-dark" > Posts</a>
                            <a href="/exercises"class="nav-link text-dark" >Exercices</a>
                            <a href="/contactus"class="nav-link text-dark" >Contact Us</a>
                            <div class="d-flex justify-content-end">
                              <button type="button" class="btn btn-outline-dark"> <a href="/logout">Logout</a> </button>
                            </div>
                            
                        </div>
                </div>
             </nav>
        </div>
        }
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src= "~/js/bodypart.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
