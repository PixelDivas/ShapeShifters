@model List<Post>

<h1 class="display-4">Check out everyones progress!</h1>
<p class="fs-5 mb-5">Click <a href="/posts/new">here</a> to create a post</p>
<div class="d-flex flex-wrap">
   @foreach (var post in Model)
   {
        <div class="card col-sm-12 col-md-6 col-lg-4 me-3 mb-3">
            <div id="carousel_@post.PostId" class="carousel" data-bs-interval="false">
                <div class="carousel-inner">      
                    <div class="carousel-item active">
                        @* img for loop needed *@
                        <img src="https://cdn.theatlantic.com/thumbor/W544GIT4l3z8SG-FMUoaKpFLaxE=/0x131:2555x1568/1600x900/media/img/mt/2017/06/shutterstock_319985324/original.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://cdn.pixabay.com/photo/2017/02/20/18/03/cat-2083492__480.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.zooplus.ie/magazine/wp-content/uploads/2021/07/Outdoor-kitten-explores-the-garden.jpeg" class="d-block w-100" alt="...">
                    </div>
                        
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel_@post.PostId" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel_@post.PostId" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
                @* Card body starts *@
            <div class="card-body">
                <h5 class="card-title">@post.Title</h5>
                <p class="card-text">@post.PostContent</p>
                <a href="#!" class="btn btn-primary">Comments</a>
                @{
                    if(post.UserId == Context.Session.GetInt32("uid")){
                        <div class="float-end">
                            <a class="me-2" href="/posts/@post.PostId/edit">Edit</a>
                            <a href="/posts/@post.PostId/delete">Delete</a>
                        </div>
                    }
                }
            </div>
        </div>
   }
</div>