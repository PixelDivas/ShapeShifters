@model List<Post>

<h1 class="display-4">Check out everyones progress!</h1>
<p class="fs-5 mb-5">Click <a href="/posts/new">here</a> to create a post</p>
<div class="d-flex flex-wrap">
   @foreach (var post in Model)
   {
        <div class="card col-sm-12 col-md-6 col-lg-4 me-3 mb-3">
            <div id="carousel_@post.PostId" class="carousel" data-bs-interval="false">
                <div class="carousel-inner">  
                    
                            @{bool firstActive = true;}    
                        @foreach (var file in post.FileUploadList)
                        {
                            if(firstActive){
                                <div class="carousel-item active">
                                    <img src="data:@file.FileType;base64,@Convert.ToBase64String(file.FileData)" class="d-block w-100" alt="@file.FileName">
                                </div>
                                firstActive = false;
                            }else{
                                <div class="carousel-item">
                                    <img src="data:@file.FileType;base64,@Convert.ToBase64String(file.FileData)" class="d-block w-100" alt="@file.FileName">
                                </div>
                            }
                        }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel_@post.PostId" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel_@post.PostId" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
                @* Card body starts *@
            <div class="card-body">
                <h5 class="card-title">@post.Title</h5>
                <p class="card-text">@post.PostContent</p>
                <a href="#!" class="btn btn-primary">Comments</a>
                @{
                    if(post.UserId == Context.Session.GetInt32("uid")){
                        <div class="float-end">
                            <a class="me-2" href="/posts/@post.PostId/edit">Edit</a>
                            <a href="/posts/@post.PostId/delete">Delete</a>
                        </div>
                    }
                }
            </div>
        </div>
   }
</div>