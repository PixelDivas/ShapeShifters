@model Post

<div class="container text-center mt-5">
    <h1 class="display-3 mb-5">Edit your post!</h1>
    <form asp-action="Update" asp-controller="Post" method="POST" asp-route-postId="@Model.PostId" class="row justify-content-center fs-5">
        <div class="mb-3 col-md-4">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" class="form-control"  value="@Model.Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 col-md-9">
            <label asp-for="PostContent" class="form-label">Content:</label>
            <textarea asp-for="PostContent" class="form-control" rows="8" value="@Model.PostContent"></textarea>
            <span asp-validation-for="PostContent" class="text-danger"></span>
        </div>
        <div>
            <button class="btn btn-primary btn-lg my-3">Update Post</button><br>
            <a href="/posts/all">Go back</a>
        </div>
    </form>
</div>